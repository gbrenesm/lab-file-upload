<main>
  <div class="postdetail">
    <div>
      <img id="profilepic" src="{{creatorId.profilePhoto}}" alt="">
      <h4>Post de {{creatorId.username}}</h4>
    </div>
    <div>
      <img src="{{picPath}}" alt="{{picName}}">
    </div>
    <div>
      <p>{{content}}</p>
    </div>
  </div>
  
  <h2>Todos los comentarios</h2>
  <br>
  {{#each comments}}
    <div class="commentdetail">
      <div>
        <p><b>Comentario de {{creatorId.username}}</b></p>
        <p>{{content}}</p>
      </div>
      <div>
        <img src="{{imagePath}}" alt="{{imageName}}">
        <p>{{imageName}}</p>
      </div>
    </div>
  {{/each}}

<h2>Crea un nuevo comentario</h2>
<form action="/posts/{{_id}}" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="content">Comentario</label>
    <textarea class="form-control" id="content" name="content" rows="2"></textarea>
  </div>
  <div class="input">
    <label for ="image-input">Sube una image</label>
    <input type="file" name="image" id="image-input">
  </div>
  <button type="submit">Env√≠a</button>
</form>
</main>

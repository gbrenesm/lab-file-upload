<main>
<h2>Todos los posts</h2>
<br>
<div class="row">
{{#each posts }}
  <div class="col-xs-12 col-md-6 col-lg-3">
    <div class="card">
      <img src="{{picPath}}" class="card-img-top" alt="{{picName}}">
      <div class="card-body">
        <p><b>Autor: {{creatorId.username}}</b></p>
        <p class="card-text">{{content}}</p>
      </div>
      <a href="/posts/{{_id}}" class="btn">Detalles</a>
    </div>
  </div>
{{/each}}
</div>
</main>